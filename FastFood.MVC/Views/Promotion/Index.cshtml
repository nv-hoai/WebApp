@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model IEnumerable<FastFood.MVC.Models.Promotion>

@{
	Layout = "_Layout.cshtml";
}


@if ((await AuthorizationService.AuthorizeAsync(User, "AdminAccess")).Succeeded)
{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Danh sách khuyến mãi</h1>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Tạo Mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
					    @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
					    @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="text-right">
					    @Html.DisplayNameFor(model => model.DiscountPercent)
                    </th>
                    <th class="text-center">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="font-weight-bold">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @{
                            var shortDescription = item.Description?.Length > 50 ?
                            item.Description.Substring(0, 50) + "..." :
                            item.Description;
                        }
                        @shortDescription
                    </td>
                    <td class="text-right text-success font-weight-bold">
                        @((item.DiscountPercent * 100).ToString("0.##"))%
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-sm btn-warning  me-2" asp-action="Edit" asp-route-id="@item.PromotionID" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="btn btn-sm btn-info text-white me-2" asp-action="Details" asp-route-id="@item.PromotionID" title="Chi Tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PromotionID" title="Xóa">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        Không tìm thấy khuyến mãi nào. Bạn có muốn <a asp-action="Create" class="alert-link">tạo mới</a>?
    </div>
}