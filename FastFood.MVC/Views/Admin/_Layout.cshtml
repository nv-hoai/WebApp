@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
        <div class="position-sticky pt-3">
            <h4 class="px-3">Quản lí</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Index" asp-controller="Admin">
                        <i class="bi bi-people-fill me-2"></i>Tài khoản
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Statistics" asp-controller="Admin">
                        <i class="bi bi-bar-chart-line-fill me-2"></i>Thống kê
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        @RenderBody()
    </main>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
