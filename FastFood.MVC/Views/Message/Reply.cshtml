@model FastFood.MVC.ViewModels.ReplyMessageViewModel

@{
    ViewData["Title"] = "Trả lời tin nhắn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header">
            <h3>@ViewData["Title"] #@Model.Id</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>Thông tin người gửi</h5>
                    <p><strong>Tên:</strong> @Model.SenderName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Nội dung tin nhắn</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Content</p>
                </div>
            </div>

            <form asp-action="Reply" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SenderName" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Content" />

                <div class="mb-3">
                    <label asp-for="Reply" class="form-label"></label>
                    <textarea asp-for="Reply" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="Reply" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Gửi phản hồi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
