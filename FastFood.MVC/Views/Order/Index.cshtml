@{
    Layout = "_Layout.cshtml";
}
<div class="container mt-1">
    <div class="row">
        <div class="text-lg-start mt-2 mb-1">
            <div style="display: inline-flex; align-items: center;">
                <i class="fa-solid fa-location-dot" style="margin-right: 8px;"></i> 
                <h4>Địa chỉ nhận hàng</h4>
            </div>
        </div>
    </div>
    <form>
        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <select class="form-select custom-radius" id="tinhThanh">
                        <option selected>Chọn Tỉnh / Thành</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <select class="form-select custom-radius" id="quanHuyen">
                        <option selected>Chọn Xã/Phường</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <input type="text" class="form-control custom-radius" id="diaChi" placeholder="Nhập địa chỉ">
                </div>
            </div>
        </div>
    </form>
</div>
<div class="container mt-1">
    <div class="row">
        <div class="text-lg-start mt-2 mb-1">
            <div style="display: inline-flex; align-items: center;">
                <i class="fa-solid fa-cart-shopping" style="margin-right: 8px;"></i>
                <h4>Chi tiết đơn hàng</h4>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Số lượng</th>
                <th scope="col">Giá</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody id="cartItems">
            <!-- Xử lý phần thông tin món ăn ở đây -->
        </tbody>
    </table>
    <h5 class="mt-4">Phương thức giao hàng</h5>
    <div class="btn-group" role="group" aria-label="Phương thức giao hàng">
        <button type="button" class="btn btn-outline-primary" id="btnPriority">
            Ưu tiên: < 20 phút - <span class="price">50,000 VND</span>
        </button>
        <button type="button" class="btn btn-outline-primary" id="btnFast">
            Nhanh: 15 phút - <span class="price">40,000 VND</span>
        </button>
        <button type="button" class="btn btn-outline-primary" id="btnEconomical">
            Tiết kiệm: 30 phút - <span class="price">30,000 VND</span>
        </button>
    </div>
    <h5 class="mt-4">Khuyến mãi</h5>
    <div class="mb-3">
        <input type="text" class="form-control" id="promoCode" placeholder="Nhập mã khuyến mãi" />
        <button type="button" class="btn btn-info mt-2" id="applyPromoBtn">Áp dụng mã</button>
    </div>

    <div class="mt-3" id="discountInfo">
        <p><strong>Giảm giá: </strong><span id="discountAmount">0</span></p>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <h5>Tổng tiền: <span id="totalAmount">0</span> VND</h5>
    </div>

    <div class="d-flex justify-content-between">
        <button type="button" class="btn btn-primary" id="checkoutBtn">Thanh toán</button>
        <button type="button" class="btn btn-secondary" id="clearCartBtn">Xóa giỏ hàng</button>
    </div>
</div>

