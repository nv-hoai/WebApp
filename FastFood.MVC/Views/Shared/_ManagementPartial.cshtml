@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@* Category and Promotion *@
@if ((await AuthorizationService.AuthorizeAsync(User, "AdminAccess")).Succeeded)
{
	<li class="nav-item">
		<a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Category</a>
	</li>
	<li class="nav-item">
		<a class="nav-link text-dark" asp-controller="Promotion" asp-action="Index">Promotion</a>
	</li>
}
else
{
	<li class="nav-item">
		<a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Category</a>
	</li>
	<li class="nav-item">
		<a class="nav-link text-dark" asp-controller="Promotion" asp-action="Index">Promotion</a>
	</li>
}

@* Order *@
@if ((await AuthorizationService.AuthorizeAsync(User, "StaffAccess")).Succeeded)
