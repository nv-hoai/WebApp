@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg custom-card-radius" style="width: 100%; max-width: 900px;">
        <div class="card-body p-0">
            <div class="row g-0 h-100">
                <div class="col-md-6 d-none d-md-block p-0">
                    <div id="registerCarousel" class="carousel slide h-100" data-bs-ride="carousel" data-bs-interval="2000">
                        <div class="carousel-inner h-100">
                            <div class="carousel-item active h-100 position-relative">
                                <img src="~/img/about_us.jpg" class="img-fluid w-100 h-100 custom-radius-registerimg" />
                            </div>
                            <div class="carousel-item h-100 position-relative">
                                <img src="~/img/login2.jpg" class="img-fluid w-100 h-100 custom-radius-registerimg" />
                            </div>
                            <div class="carousel-item h-100 position-relative">
                                <img src="~/img/login3.jpg" class="img-fluid w-100 h-100 custom-radius-registerimg" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 p-5 d-flex flex-column justify-content-center">
                    <div class="text-center mb-4">
                        <h2 class="h3 font-weight-normal">Burgz xin chào !</h2>
                        <p class="text-muted">Đăng ký ngay để bắt đầu hành trình khám phá món ngon cùng chúng tôi!</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.FullName" class="form-control" autocomplete="on" aria-required="true" placeholder="Nguyen Van A" />
                            <label asp-for="Input.FullName">Họ và tên</label>
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Phone" class="form-control" autocomplete="tel" aria-required="true" placeholder="0123456789" />
                            <label asp-for="Input.Phone">Số điện thoại</label>
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.Password">Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required />
                            <label class="form-check-label small" for="agreeTerms">
                                Tôi đồng ý với <a asp-controller="Home" asp-action="Privacy" target="_blank">Điều khoản & Dịch vụ</a>
                            </label>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Đăng ký</button>
                        <div class="text-center pt-3">
                            <p class="text-muted small mb-2">Bạn đã có tài khoản?</p>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary btn-sm">Đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("registerForm").addEventListener("submit", function (e) {
            const agree = document.getElementById("agreeTerms");
            if (!agree.checked) {
                e.preventDefault();
                alert("Bạn cần đồng ý với Điều khoản & Dịch vụ để tiếp tục.");
            }
        });
    </script>
}